{
    "name": "apply_patch",
    "description": "Apply a patch to a file (replace original block with new block)",
    "parameters": {
        "path": {
            "type": "string",
            "description": "File path",
            "required": true
        },
        "original_block": {
            "type": "string",
            "description": "Original code block to replace",
            "required": true
        },
        "new_block": {
            "type": "string",
            "description": "New code block",
            "required": true
        }
    },
    "examples": [
        {
            "tool": "apply_patch",
            "params": {
                "path": "sandbox/file.py",
                "original_block": "def old():\n    pass",
                "new_block": "def new():\n    return 42"
            }
        }
    ],
    "error_hints": {
        "FileNotFoundError": "File doesn't exist. Check the path.",
        "ValueError": "Original block not found in file. Make sure you're matching exact content including whitespace."
    },
    "version": 1,
    "last_updated": "2025-12-10"
}